#include <stdio.h>

void checkEvenOdd(int num) {
    if (num & 1)  // Check LSB using bitwise AND
        printf("%d is ODD\n", num);
    else
        printf("%d is EVEN\n", num);
}

int main() {
    int num;
    
    printf("Enter a number: ");
    scanf("%d", &num);

    checkEvenOdd(num);

    return 0;
}
