////////////////////////////////////


#include <stdio.h>

int sum (int a, int b)
{
    printf("sum = %d", (a+b));
}

int sub (int a, int b)
{
    printf("sum = %d", (a-b));
}

int main()
{
    int i;
    int (*fptr[]) (int,int) = {sum,sub};
    
    fptr[1](5,5);
    
   // sum(5,6);

   return 0;
    
}



